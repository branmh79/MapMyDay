<!-- dialog_add_event.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- implementing the event date dialog -->
    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="8dp"
        android:text="Select Date"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <EditText
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Title"
        android:textColor="@color/black"/>

    <AutoCompleteTextView
        android:id="@+id/eventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Location"
        android:textColor="@color/black"/>

    <AutoCompleteTextView
        android:id="@+id/eventFromLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="From Location"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/eventStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (HH:mm)"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/eventEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (HH:mm)"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/eventNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter notes (optional)"
        android:inputType="textMultiLine"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/addEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event" />

    <!-- TextView that is used for displaying the date in the event adder
    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="Date" /> -->

    <AutoCompleteTextView
        android:id="@+id/recurrenceInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recurrence Interval (e.g., 1)"
        android:inputType="number" />

    <TextView
        android:id="@+id/recurrenceEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recurrence End Date"
        android:padding="10dp" />

    <AutoCompleteTextView
        android:id="@+id/recurrenceFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recurrence Frequency"
        android:inputType="text" />

    <LinearLayout
        android:id="@+id/daysOfWeekLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/checkSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun" />

        <CheckBox
            android:id="@+id/checkMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon" />

        <CheckBox
            android:id="@+id/checkTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tues" />

        <CheckBox
            android:id="@+id/checkWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed" />

        <CheckBox
            android:id="@+id/checkThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thurs" />

        <CheckBox
            android:id="@+id/checkFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri" />

        <CheckBox
            android:id="@+id/checkSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat" />
    </LinearLayout>
</LinearLayout>